<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_purple_gradient_inv"
        android:text="Entrenamiento"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="15sp"
        android:textColor="@color/blue_green" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/color_blue1_gradient"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textEjercicioActual"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@drawable/color_blue1_gradient"
            android:text="Ejercicio Actual"
            android:gravity="center"
            android:textSize="27sp"
            android:padding="12sp"
            android:textColor="@color/blue_green"/>

        <TextView
            android:id="@+id/tvSerie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serie: 0/3"
            android:textSize="23sp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:padding="8sp"/>

        <com.javiercanales.calistenia.planes.CircularCountdownView
            android:id="@+id/circularCountdownView"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:padding="15dp"/>

        <TextView
            android:id="@+id/textDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n del ejercicio"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="23sp"
            android:textStyle="italic"
            android:padding="10sp"
            android:textColor="@android:color/black"
            android:layout_weight="0.2"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:padding="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnAnterior"
            android:text="Anterior"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/blue_green"
            android:background="@drawable/color_button_gradient"
            android:padding="5dp"/>

        <Button
            android:id="@+id/btnPausar"
            android:text="Pausar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/blue_green"
            android:background="@drawable/color_button_gradient"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/btnSiguiente"
            android:text="Siguiente"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/blue_green"
            android:background="@drawable/color_button_gradient"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>
