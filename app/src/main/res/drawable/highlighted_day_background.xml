<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Borde exterior -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="30dp"/>
            <stroke
                android:color="#0089FF"
                android:width="3.5dp"/>
        </shape>
    </item>

    <!-- Borde interior con un margen -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="30dp"/>
            <stroke
                android:color="#FF000000"
                android:width="1.5dp"/>
        </shape>
    </item>

</layer-list>
